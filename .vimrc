set autoindent
set autoread
set expandtab
set hlsearch
set incsearch
set ignorecase
set list
set listchars=tab:>-,trail:.
set noequalalways
set nojoinspaces
set ruler
set softtabstop=4
set shiftwidth=4
set showmatch
set smartcase
set textwidth=0
set winminheight=0

map <c-j> <c-w>j<c-w>_
map <c-k> <c-w>k<c-w>_
